<div class="container" style="margin: 100px auto;">   
    <form action="/admin/login" method="post">
    <div>
        <div class="mb-3">
            <label for="exampleInput" class="form-label">Usuario</label>
            <input type="text" class="form-control" id="user" aria-describedby="userHelp" name="user">
            <div id="userHelp" class="form-text">Nunca compartiremos tus datos con alguien mas.</div>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Contraseña</label>
            <input type="password" class="form-control" id="password" name="password">
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
    </form>
    {{#if error}}
        <p>Usuario o contraseña incorrectos.</p>
    {{/if}}
</div>